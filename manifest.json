{
  "manifest_version": 3,
  "name": "Web Buddy Tech Demo",
  "version": "1.0",
  "description": "Voice-first AI suite for web, docs, offline, and API â€” talk to anything, anywhere, anytime.",
  "permissions": [
    "storage",
    "scripting",
    "offscreen",
    "tabs",
    "clipboardWrite"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "service-worker.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content-script.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Copy page as Markdown",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "options_page": "options.html",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": [ "icons/mic.png", "icons/mic-recording.png", "icons/mic-processing.png", "onboarding.html", "dist/libs-bundle.js" ],
      "matches": [ "<all_urls>" ]
    }
  ]
} 